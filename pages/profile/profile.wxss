/* pages/profile/profile.wxss */

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 226, 0.3);
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-avatar {
  position: relative;
  margin-right: 30rpx;
}

.avatar-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-badge {
  position: absolute;
  bottom: 0;
  right: 0;
  background: #FF4D4F;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  border: 2rpx solid #fff;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.user-id {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.user-location {
  font-size: 24rpx;
  opacity: 0.8;
}

.credit-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 25rpx;
}

.credit-score {
  text-align: center;
}

.score-number {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.score-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.credit-level {
  flex: 1;
  margin-left: 30rpx;
}

.level-text {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.level-progress {
  width: 100%;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #fff;
  border-radius: 4rpx;
  transition: width 0.3s;
}

/* 功能菜单 */
.menu-section {
  margin-bottom: 30rpx;
}

.menu-group {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f8f9fa;
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
}

.menu-icon.booking {
  background: linear-gradient(135deg, #52C41A 0%, #389E0D 100%);
}

.menu-icon.message {
  background: linear-gradient(135deg, #FF4D4F 0%, #CF1322 100%);
}

.menu-icon.credit {
  background: linear-gradient(135deg, #FAAD14 0%, #D48806 100%);
}

.menu-icon.help {
  background: linear-gradient(135deg, #722ED1 0%, #531DAB 100%);
}

.menu-icon.settings {
  background: linear-gradient(135deg, #13C2C2 0%, #08979C 100%);
}

.menu-icon.about {
  background: linear-gradient(135deg, #8C8C8C 0%, #595959 100%);
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.menu-badge {
  background: #FF4D4F;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  margin-right: 15rpx;
  min-width: 32rpx;
  text-align: center;
}

.menu-arrow {
  font-size: 24rpx;
  color: #ccc;
}

/* 使用统计 */
.statistics-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.statistics-grid {
  display: flex;
  flex-wrap: wrap;
}

.stat-item {
  width: 50%;
  text-align: center;
  padding: 30rpx 20rpx;
  border-right: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.stat-item:nth-child(2n) {
  border-right: none;
}

.stat-item:nth-child(n+3) {
  border-bottom: none;
}

.stat-number {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #4A90E2;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 最近活动 */
.activity-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.view-all {
  font-size: 26rpx;
  color: #4A90E2;
}

.activity-list {
  margin-top: 20rpx;
}

.activity-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.activity-icon.booking {
  background: #f0f7ff;
  color: #4A90E2;
}

.activity-icon.completed {
  background: #f6ffed;
  color: #52C41A;
}

.activity-icon.cancelled {
  background: #fff2f0;
  color: #FF4D4F;
}

.activity-content {
  flex: 1;
}

.activity-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.activity-time {
  font-size: 24rpx;
  color: #999;
}

.activity-status {
  text-align: right;
}

.status-text {
  font-size: 24rpx;
  color: #4A90E2;
  font-weight: 500;
}

/* 退出登录 */
.logout-section {
  margin-bottom: 30rpx;
}

.logout-btn {
  width: 100%;
  height: 80rpx;
  background: #fff;
  border: 2rpx solid #FF4D4F;
  border-radius: 40rpx;
  color: #FF4D4F;
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logout-btn::after {
  border: none;
}

/* 登录按钮 */
.login-section {
  margin-bottom: 30rpx;
}

.login-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  border-radius: 40rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn::after {
  border: none;
}
