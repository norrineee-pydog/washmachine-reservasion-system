/* pages/credit/credit.wxss */

.credit-card {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 226, 0.3);
}

.credit-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.credit-score {
  text-align: center;
}

.score-number {
  display: block;
  font-size: 64rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.score-label {
  font-size: 26rpx;
  opacity: 0.9;
}

.credit-level {
  flex: 1;
  margin-left: 40rpx;
}

.level-text {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.level-progress {
  position: relative;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #fff;
  border-radius: 6rpx;
  transition: width 0.3s;
}

.progress-text {
  position: absolute;
  right: 0;
  top: -30rpx;
  font-size: 22rpx;
  opacity: 0.8;
}

.rules-section, .privileges-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.rules-list {
  margin-top: 20rpx;
}

.rule-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.rule-item:last-child {
  border-bottom: none;
}

.rule-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 20rpx;
}

.rule-icon.positive {
  background: #f6ffed;
  color: #52c41a;
}

.rule-icon.negative {
  background: #fff2f0;
  color: #ff4d4f;
}

.rule-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.rule-score {
  font-size: 26rpx;
  color: #4A90E2;
  font-weight: 500;
}

.privileges-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.privilege-item {
  width: calc(50% - 10rpx);
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 30rpx 20rpx;
  text-align: center;
}

.privilege-level {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 15rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.privilege-level.bronze {
  background: #f5f5f5;
  color: #8c8c8c;
}

.privilege-level.silver {
  background: #f0f0f0;
  color: #595959;
}

.privilege-level.gold {
  background: #fff7e6;
  color: #d48806;
}

.privilege-level.diamond {
  background: #e6f7ff;
  color: #1890ff;
}

.privilege-desc {
  font-size: 24rpx;
  color: #666;
}
