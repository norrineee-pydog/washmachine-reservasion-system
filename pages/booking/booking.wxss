/* pages/booking/booking.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

/* 导航头部 */
.nav-header {
  padding: 30rpx 0;
  text-align: center;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 分区样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 40rpx 0 20rpx 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-actions {
  display: flex;
  align-items: center;
}

.action-text {
  font-size: 26rpx;
  color: #1890ff;
  margin-left: 30rpx;
}

/* 当前预约 */
.current-booking-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.booking-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.booking-machine {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.booking-location {
  font-size: 26rpx;
  color: #666;
}

.booking-status {
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.booking-status.pending {
  background: #e6f7ff;
  color: #1890ff;
}

.booking-time {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.time-label {
  font-size: 26rpx;
  color: #666;
}

.time-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.booking-countdown {
  text-align: center;
  margin-bottom: 30rpx;
}

.countdown-text {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.booking-actions {
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  padding: 20rpx;
  border: none;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.btn-primary {
  background: #1890ff;
  color: white;
}

.btn-secondary {
  background: #f5f5f5;
  color: #666;
}

.btn:disabled {
  background: #f5f5f5;
  color: #ccc;
}

/* 快速预约 */
.quick-booking-cards {
  display: flex;
  gap: 20rpx;
}

.quick-card {
  flex: 1;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.card-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.card-icon.immediate {
  color: #52c41a;
}

.card-icon.schedule {
  color: #1890ff;
}

.card-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.card-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.card-tip {
  font-size: 22rpx;
  color: #999;
}

/* 智能推荐 */
.recommendation-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.recommendation-item {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.recommendation-item:last-child {
  border-bottom: none;
}

.recommendation-time {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
  min-width: 120rpx;
}

.time-slot {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.time-date {
  font-size: 22rpx;
  color: #999;
}

.recommendation-content {
  flex: 1;
}

.recommendation-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.recommendation-score {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.score-value {
  font-size: 24rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.score-text {
  font-size: 22rpx;
  color: #999;
}

.recommendation-arrow {
  font-size: 32rpx;
  color: #ccc;
}

/* 统计卡片 */
.statistics-cards {
  display: flex;
  gap: 20rpx;
}

.stat-card {
  flex: 1;
  background: white;
  border-radius: 15rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.stat-number {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #1890ff;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 搜索框 */
.search-container {
  margin-bottom: 20rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.search-cancel {
  font-size: 28rpx;
  color: #1890ff;
  margin-left: 20rpx;
}

/* 历史记录 */
.history-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.history-item {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-info {
  flex: 1;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.history-machine {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.history-status {
  padding: 8rpx 16rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
}

.history-status.completed {
  background: #f6ffed;
  color: #52c41a;
}

.history-status.pending {
  background: #e6f7ff;
  color: #1890ff;
}

.history-status.cancelled {
  background: #f5f5f5;
  color: #999;
}

.history-details {
  margin-bottom: 15rpx;
}

.history-location, .history-time {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.history-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.history-price {
  font-size: 24rpx;
  color: #ff4d4f;
  font-weight: 500;
}

.history-date {
  font-size: 22rpx;
  color: #999;
}

.history-arrow {
  font-size: 32rpx;
  color: #ccc;
  margin-left: 20rpx;
}

.history-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.history-cancel-btn {
  border: 1rpx solid #ff4d4f;
  color: #ff4d4f;
  background: #fff2f0;
  border-radius: 24rpx;
  padding: 8rpx 24rpx;
  font-size: 24rpx;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 999;
}

.modal-content {
  background: white;
  border-radius: 30rpx 30rpx 0 0;
  width: 100%;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.washer-modal {
  max-height: 70vh;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
}

.duration-selector {
  padding: 20rpx 30rpx 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.duration-selector.washer-duration {
  border-bottom: none;
}

.duration-title {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.duration-options {
  display: flex;
  gap: 16rpx;
}

.duration-option {
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  border: 1rpx solid #d9d9d9;
  font-size: 24rpx;
  color: #666;
  background: #f9f9f9;
}

.duration-option.active {
  border-color: #1890ff;
  color: #1890ff;
  background: #e6f7ff;
  font-weight: 600;
}

/* 日期选择 */
.date-selector {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.date-list {
  white-space: nowrap;
}

.date-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 30rpx;
  margin-right: 20rpx;
  border-radius: 15rpx;
  background: #f5f5f5;
}

.date-item.active {
  background: #1890ff;
  color: white;
}

.date-day {
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.date-date {
  font-size: 24rpx;
}

/* 时间段选择 */
.time-slots-section {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.time-header {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.time-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.time-date {
  font-size: 24rpx;
  color: #666;
}

.time-slots-list {
  flex: 1;
  padding: 20rpx 30rpx;
}

.time-slot-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  margin-bottom: 15rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 15rpx;
  background: #fafafa;
}

.time-slot-item.selected {
  border-color: #1890ff;
  background: #e6f7ff;
}

.time-slot-item.disabled {
  background: #f5f5f5;
  color: #ccc;
}

.slot-time {
  display: flex;
  flex-direction: column;
}

.time-range {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.slot-tip {
  font-size: 22rpx;
  color: #52c41a;
}

.status-text {
  padding: 8rpx 16rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
}

.status-text.peak {
  background: #fff2e8;
  color: #fa541c;
}

.status-text.normal {
  background: #f6ffed;
  color: #52c41a;
}

/* 洗衣机选择 */
.washer-selector {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.washer-count {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.count-text {
  font-size: 26rpx;
  color: #666;
}

.washer-list-modal {
  flex: 1;
}

.washer-item-modal {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.washer-item-modal.selected {
  background: #e6f7ff;
}

.washer-info-modal {
  flex: 1;
}

.washer-header-modal {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.washer-name-modal {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.washer-status-modal {
  padding: 8rpx 16rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
}

.washer-status-modal.idle {
  background: #f6ffed;
  color: #52c41a;
}

.washer-details-modal {
  margin-bottom: 15rpx;
}

.washer-location-modal, .washer-type-modal {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.washer-footer-modal {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.washer-price-modal {
  font-size: 24rpx;
  color: #ff4d4f;
  font-weight: 500;
}

.washer-desc-modal {
  font-size: 22rpx;
  color: #999;
}

.washer-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.checkbox-icon {
  color: #1890ff;
  font-size: 24rpx;
  font-weight: bold;
}

/* 无数据提示 */
.no-slots-tip, .no-washers-tip {
  text-align: center;
  padding: 60rpx 30rpx;
}

.tip-text {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.tip-desc {
  font-size: 24rpx;
  color: #ccc;
}

/* 弹窗操作按钮 */
.modal-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background: #1890ff;
  color: white;
}

/* 加载和空状态 */
.loading-state, .empty-state {
  text-align: center;
  padding: 60rpx 30rpx;
  background: white;
  border-radius: 20rpx;
  color: #999;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #ccc;
}

/* 安全区域 */
.safe-area {
  height: env(safe-area-inset-bottom);
}