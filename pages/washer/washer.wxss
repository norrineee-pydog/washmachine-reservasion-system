/* pages/washer/washer.wxss */

.header {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}

.building-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.building-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.floor-picker .picker-inner {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 12rpx 20rpx;
}

.picker-text { font-size: 26rpx; color: #333; }
.picker-arrow { font-size: 22rpx; color: #999; margin-left: 10rpx; }

.summary { display: flex; gap: 20rpx; }
.sum-item { font-size: 24rpx; color: #666; }
.sum-item.idle { color: #52C41A; }
.sum-item.working { color: #FF4D4F; }
.sum-item.booking { color: #FA8C16; }
.sum-item.ready { color: #1890FF; }

.toolbar { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20rpx; }
.chips { white-space: nowrap; }
.chip { display: inline-block; padding: 10rpx 20rpx; background: #f5f5f5; border-radius: 20rpx; margin-right: 12rpx; font-size: 24rpx; color: #666; }
.chip.active { background: #f0f7ff; color: #4A90E2; }
.sort-text { font-size: 24rpx; color: #4A90E2; }

.grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 20rpx; }
.card { background: #fff; border-radius: 16rpx; padding: 20rpx; box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08); }
.card-top { display: flex; justify-content: space-between; align-items: center; margin-bottom: 12rpx; }
.card-name { font-size: 28rpx; color: #333; font-weight: 500; }
.status-tag { padding: 6rpx 12rpx; border-radius: 12rpx; font-size: 20rpx; }
.status-idle { background: #f6ffed; color: #52c41a; border: 1rpx solid #b7eb8f; }
.status-working { background: #fff2f0; color: #ff4d4f; border: 1rpx solid #ffccc7; }
.status-booking { background: #fff7e6; color: #fa8c16; border: 1rpx solid #ffd591; }
.status-ready { background: #e6f7ff; color: #1890ff; border: 1rpx solid #91d5ff; }
.card-middle { display: flex; justify-content: space-between; align-items: center; margin-bottom: 16rpx; }
.location { font-size: 24rpx; color: #666; }
.remain { font-size: 24rpx; color: #4A90E2; }
.card-actions { display: flex; }
.btn { flex: 1; text-align: center; padding: 16rpx 0; border-radius: 28rpx; font-size: 26rpx; }
.btn.primary { background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%); color: #fff; }
.btn.disabled { background: #d9d9d9; color: #999; }

.empty-state { text-align: center; color: #999; padding: 80rpx 20rpx; }
.empty-icon { font-size: 120rpx; margin-bottom: 20rpx; }
.empty-text { font-size: 28rpx; }

