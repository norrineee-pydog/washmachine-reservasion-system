/* pages/my-booking/my-booking.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 导航栏 */
.navbar {
  background: white;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
}

.navbar-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 48rpx;
  color: #333;
}

.navbar-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.navbar-refresh {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.refresh-icon {
  font-size: 36rpx;
  color: #666;
}

/* 状态标签页 */
.status-tabs {
  background: white;
  padding: 20rpx 0;
}

.tab-scroll {
  white-space: nowrap;
}

.tab-list {
  display: inline-flex;
  padding: 0 30rpx;
}

.tab-item {
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  border-radius: 30rpx;
  background: #f8f9fa;
  transition: all 0.3s;
}

.tab-item.active {
  background: #07c160;
}

.tab-item.active .tab-text {
  color: white;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 0;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #ccc;
  margin-bottom: 40rpx;
}

.empty-btn {
  background: #07c160;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
}

/* 预约列表 */
.booking-list {
  height: calc(100vh - 200rpx);
  padding: 20rpx;
}

.booking-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.booking-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.machine-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.status-tag {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-pending {
  background: #fff7e6;
  color: #fa8c16;
}

.status-confirmed {
  background: #f6ffed;
  color: #52c41a;
}

.status-working {
  background: #e6f7ff;
  color: #1890ff;
}

.status-completed {
  background: #f0f0f0;
  color: #666;
}

.status-cancelled {
  background: #fff2f0;
  color: #ff4d4f;
}

.status-expired {
  background: #f0f0f0;
  color: #999;
}

/* 预约信息 */
.booking-info {
  margin-bottom: 24rpx;
}

.info-item {
  display: flex;
  margin-bottom: 12rpx;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  width: 120rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

/* 底部操作 */
.booking-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.price-section {
  display: flex;
  align-items: center;
}

.price-label {
  font-size: 28rpx;
  color: #666;
}

.price-value {
  font-size: 32rpx;
  color: #ff6b35;
  font-weight: bold;
}

.action-buttons {
  display: flex;
}

.btn {
  padding: 16rpx 32rpx;
  border: none;
  border-radius: 8rpx;
  font-size: 26rpx;
  margin-left: 16rpx;
}

.btn-cancel {
  background: #fff2f0;
  color: #ff4d4f;
}

.btn-pay {
  background: #fff7e6;
  color: #fa8c16;
}

.btn-primary {
  background: #e6f7ff;
  color: #1890ff;
}

.btn-success {
  background: #f6ffed;
  color: #52c41a;
}

.btn-rebook {
  background: #f6ffed;
  color: #52c41a;
}

.action-buttons .paid-text {
  margin-left: 16rpx;
  font-size: 26rpx;
  color: #666;
}

/* 安全区域 */
.safe-area {
  height: env(safe-area-inset-bottom);
  height: constant(safe-area-inset-bottom);
}