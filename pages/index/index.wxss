/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5; /* 改为和其他页面一样的浅灰色背景 */
  padding: 20rpx;
}

/* 状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.weather-info {
  display: flex;
  flex-direction: column;
}

.weather-temp {
  font-size: 36rpx;
  font-weight: bold;
  color: #333; /* 改为深色文字 */
}

.weather-desc {
  font-size: 24rpx;
  color: #666; /* 改为深色文字 */
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.user-name {
  font-size: 28rpx;
  color: #333; /* 改为深色文字 */
  font-weight: 500;
}

.user-building {
  font-size: 22rpx;
  color: #666; /* 改为深色文字 */
}

/* 状态概览 */
.status-overview {
  margin-bottom: 30rpx;
}

.overview-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.overview-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.overview-count {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.overview-count.idle {
  color: #52c41a;
}

.overview-count.booking {
  color: #1890ff;
}

.overview-count.working {
  color: #fa8c16;
}

.overview-count.ready {
  color: #722ed1;
}

.overview-label {
  font-size: 24rpx;
  color: #666;
}

/* 快速操作 */
.quick-actions {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.quick-action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
  border-radius: 20rpx;
  padding: 20rpx 10rpx;
  width: 22%;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.action-text {
  font-size: 24rpx;
  color: #000000;
  font-weight: 500;
  text-align: center;
  line-height: 1.4;
}

/* 分区样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333; /* 改为深色文字 */
}

.section-actions {
  display: flex;
  align-items: center;
}

.refresh-btn, .view-all {
  font-size: 24rpx;
  color: #1890ff; /* 改为蓝色文字 */
  margin-left: 20rpx;
}

/* 洗衣机列表 */
.washer-section {
  margin-bottom: 30rpx;
}

.washer-list {
  max-height: 600rpx;
}

.washer-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.washer-item.idle {
  border-left: 8rpx solid #52c41a;
}

.washer-item.booking {
  border-left: 8rpx solid #1890ff;
}

.washer-item.working {
  border-left: 8rpx solid #fa8c16;
}

.washer-item.ready {
  border-left: 8rpx solid #722ed1;
}

.washer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.washer-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.washer-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

.washer-status.idle {
  background: #f6ffed;
  color: #52c41a;
}

.washer-status.booking {
  background: #e6f7ff;
  color: #1890ff;
}

.washer-status.working {
  background: #fff7e6;
  color: #fa8c16;
}

.washer-status.ready {
  background: #f9f0ff;
  color: #722ed1;
}

.washer-details {
  margin-bottom: 15rpx;
}

.washer-location, .washer-type {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.washer-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.washer-price {
  font-size: 24rpx;
  color: #ff4d4f;
  font-weight: 500;
}

.washer-remaining {
  font-size: 22rpx;
  color: #999;
}

.washer-action .action-arrow {
  font-size: 36rpx;
  color: #ccc;
}

/* 推荐区域 */
.recommendation-section {
  margin-bottom: 30rpx;
}

.recommendation-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.recommendation-item {
  display: flex;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.recommendation-item:last-child {
  border-bottom: none;
}

.recommendation-time {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  min-width: 120rpx;
}

.time-slot {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.time-date {
  font-size: 22rpx;
  color: #999;
}

.recommendation-content {
  flex: 1;
}

.recommendation-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.recommendation-score {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.score-text {
  font-size: 22rpx;
  color: #999;
}

.score-value {
  font-size: 24rpx;
  color: #ff4d4f;
  font-weight: bold;
}

/* 公告区域 */
.notice-section {
  margin-bottom: 30rpx;
}

.notice-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rrpx 20rpx rgba(0, 0, 0, 0.1);
}

.notice-item {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.notice-item:last-child {
  border-bottom: none;
}

.notice-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.notice-content {
  flex: 1;
}

.notice-title {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.notice-time {
  font-size: 22rpx;
  color: #999;
}

.notice-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 加载和空状态 */
.loading-state, .empty-state {
  text-align: center;
  padding: 60rpx;
  background: white;
  border-radius: 20rpx;
  color: #999;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 安全区域 */
.safe-area {
  height: env(safe-area-inset-bottom);
}